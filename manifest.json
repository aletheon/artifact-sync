{
    "manifest_version": 3,
    "name": "Artifact Sync",
    "version": "2.0.0",
    "description": "Automatically capture and archive AI coding sessions.",
    "permissions": [
        "storage",
        "downloads",
        "identity",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://www.googleapis.com/*"
    ],
    "background": {
        "service_worker": "src/background/service_worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "src/content/gemini_observer.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "js": [
                "src/content/chatgpt_observer.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_ui": {
        "page": "src/options/options.html",
        "open_in_tab": true
    },
    "oauth2": {
        "client_id": "YOUR_CLIENT_ID_HERE",
        "scopes": [
            "https://www.googleapis.com/auth/drive.file"
        ]
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/lib/jspdf.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}