{
  "name": "Artifact Sync",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Automatically captures artifacts from chat and saves to Google Drive.",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "identity",
    "storage",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://antigravity.google/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://www.googleapis.com/*",
    "https://*.googleusercontent.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Artifact Sync",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://antigravity.google/*"
      ],
      "js": [
        "content_gemini.js"
      ]
    },
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "content_chatgpt.js"
      ]
    }
  ],
  "oauth2": {
    "client_id": "237685461461-hf56377umbam8u4bu1c3ep4bs7arrrs7.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  }
}